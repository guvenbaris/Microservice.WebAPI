      "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
    },

    {
      "DownstreamPathTemplate": "/api/customer/{id}",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3000
        }
      ],
